    <div class="container text-center">
        <a href="/" class="btn btn-primary">Home</a>
        <a href="/employees" class="btn btn-primary">Employee</a>
        <a href="/employers" class="btn btn-primary">Employer</a>
        <a href="/jobs" class="btn btn-primary">Jobs</a>
    </div>
    <div class="container mt-4 mb-4 text-center">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Type</th>
                    <th>Total Employees</th>
                    <th>City</th>
                    <th>Actions</th> 
                </tr>
            </thead>
            <tbody>
                <% employers.forEach (employer => { %>
                    <tr>
                        <td><%= employer.id %></td>
                        <td><%= employer.name %></td>
                        <td><%= employer.type %></td>
                        <td><%= employer.total_employee %></td>
                        <td><%= employer.city %></td>
                        <td>
                            <div>
                                <a href="/employers/update/<%= employer.id%>" class="btn btn-primary">Update Data</a>
                                <a href="/employers/delete/<%= employer.id%>" class="btn btn-danger">Delete Data</a>
                            </div>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
        <div>
            <a href="/employers/create" class="btn btn-primary btn-lg">Add Employers</a>
        </div>
    </div>
